<?xml version="1.0" encoding="UTF-8"?>
<project name="Air Native Extension Build Scripts" default="all">

	<property file="build.config" />

	<target name="all" depends="ios,android,ios-swc,android-swc,default,package" description="Full build of extension" />

	<target name="ios" description="Build iOS Library">
		<mkdir dir="../temp/ios/build/" />

		<exec executable="xcodebuild" failonerror="true" dir="../ios/${name}IosExtension">
			<arg line='-project ${name}IosExtension.xcodeproj' />
			<arg line='-target ${name}IosExtension' />
			<arg line='-configuration Release' />
			<arg line='SYMROOT=../../temp/ios/build/' />
		</exec>

		<copy file="../temp/ios/build/Release-iphoneos/lib${name}IosExtension.a" todir="../temp/ios" overwrite="true" />

		<exec executable="ibtool" failonerror="true">
			<arg value="--errors" />
			<arg value="--warnings" />
			<arg value="--notices" />
			<arg line="--output-format human-readable-text" />
			<arg line="--compile /Users/nick/Workspace/AIR/MoPub-ANE/temp/ios/MPAdBrowserController.nib" />
			<arg value="${mopub.ios.sdk}/Internal/Common/MPAdBrowserController.xib" />
		</exec>
		
		<copy todir="../temp/ios" overwrite="true">
			<fileset dir="${mopub.ios.sdk}/Resources"/>
		</copy>
		
		<copy todir="../temp/ios/GoogleMobileAds.framework" overwrite="true">
			<fileset dir="${mopub.ios.sdk}/AdNetworkSupport/GoogleAdMob/SDK/GoogleMobileAds.framework"/>
		</copy>
		
		<copy todir="../temp/ios" overwrite="true">
			<fileset dir="${mopub.ios.sdk}/AdNetworkSupport/Vungle/SDK/VungleSDK.embeddedframework/Resources"/>
		</copy>
		
		<copy todir="../temp/ios/VungleSDK.framework" overwrite="true">
			<fileset dir="${mopub.ios.sdk}/AdNetworkSupport/Vungle/SDK/VungleSDK.embeddedframework/VungleSDK.framework"/>
		</copy>

		<delete dir="../temp/ios/build/" />
	</target>

	<target name="android" description="Build android Library">
		<delete dir="../android/temp" />
		<mkdir dir="../android/temp/classes" />

		<javac destdir="../android/temp/classes" includeantruntime="false">
			<src path="../android/src" />
			<src path="${mopub.android.sdk}/mopub-sdk/src/main/java" />
			<src path="${mopub.android.sdk}/extras/src" />
 			<exclude name="com/mopub/mobileads/AdColonyInterstitial.java" />
 			<exclude name="com/mopub/mobileads/AdColonyRewardedVideo.java" />
 			<exclude name="com/mopub/mobileads/ChartboostInterstitial.java" />
 			<exclude name="com/mopub/mobileads/ChartboostRewardedVideo.java" />
 			<exclude name="com/mopub/mobileads/ChartboostShared.java" />
 			<exclude name="com/mopub/mobileads/FacebookBanner.java" />
 			<exclude name="com/mopub/mobileads/FacebookInterstitial.java" />
 			<exclude name="com/mopub/mobileads/MillennialBanner.java" />
 			<exclude name="com/mopub/mobileads/MillennialInterstitial.java" />
 			<exclude name="com/mopub/mobileads/VungleRewardedVideo.java" />
 			<exclude name="com/mopub/nativeads/**/" />
 			<exclude name="com/mopub/simpleadsdemo/**/" />
			<classpath>
				<pathelement location="${android.sdk}/android.jar" />
				<pathelement location="../android/libs/FlashRuntimeExtensions.jar" />
				<pathelement location="${gps.android.sdk}/libs/google-play-services.jar" />
				<pathelement location="${mopub.volley.android.jar}" />
				<pathelement location="${mopub.recyclerview.android.jar}" />
				<pathelement location="${vungle.android.jar}" />
				<pathelement location="${vungle.dagger.android.jar}" />
				<pathelement location="${vungle.javax.inject.android.jar}" />
				<pathelement location="${vungle.nineoldandroids.android.jar}" />
				<pathelement location="${vungle.support.android.jar}" />
			</classpath>
		</javac>

		<mkdir dir="../android/temp/zip" />
		<copy todir="../android/temp/zip/res">
			<fileset dir="${gps.android.sdk}/res" />
		</copy>

		<mkdir dir="../android/temp/vungle" />
		<unzip dest="../android/temp/vungle" src="${vungle.android.jar}" />
		<delete dir="../test/build/vungle-assets" />
		<mkdir dir="../test/build/vungle-assets" />
		<copy todir="../test/build/vungle-assets">
			<fileset dir="../android/temp/vungle/assets" />
		</copy>
		<delete dir="../android/temp/vungle" />

		<mkdir dir="../temp/android/" />
		<jar basedir="../android/temp/classes" destfile="../temp/android/${name}AndroidExtension.jar" />
		<copy todir="../temp/android/res">
			<fileset dir="../android/temp/zip/res" />
		</copy>
		<copy file="${mopub.volley.android.jar}" tofile="../temp/android/mopub.volley.jar" />
		<copy file="${mopub.recyclerview.android.jar}" tofile="../temp/android/mopub.recyclerview.jar" />
		<copy file="${gps.android.sdk}/libs/google-play-services.jar" tofile="../temp/android/google-play-services.jar" />
		<copy file="${vungle.android.jar}" tofile="../temp/android/vungle.jar" />
		<copy file="${vungle.dagger.android.jar}" tofile="../temp/android/vungle.dagger.jar" />
		<copy file="${vungle.javax.inject.android.jar}" tofile="../temp/android/javax.inject.jar" />
		<copy file="${vungle.nineoldandroids.android.jar}" tofile="../temp/android/vungle.nineoldandroids.jar" />
		<copy file="${vungle.support.android.jar}" tofile="../temp/android/android-support-v4.jar" />

		<delete dir="../android/temp" />
	</target>

	<target name="ios-swc" description="Build ios swc library">
		<mkdir dir="../temp/swc/content/" />

		<fileset dir="../actionscript" casesensitive="yes" id="classfiles.ios">
			<include name="ios/src/**/*.as" />
			<include name="common/src/**/*.as" />
		</fileset>

		<pathconvert property="classlist.ios" refid="classfiles.ios" pathsep=" " dirsep=".">
			<regexpmapper from=".*src.(.*)\.as" to="\1" />
		</pathconvert>

		<exec executable="${sdk.home}/bin/compc" failonerror="true">
			<arg line='-source-path ../actionscript/ios/src' />
			<arg line='-source-path+=../actionscript/common/src' />
			<arg line='-output ../temp/swc/${name}.swc' />
			<arg line='-swf-version=13' />
			<arg line='-external-library-path+="${sdk.home}/frameworks/libs/air/airglobal.swc"' />
			<arg line='-include-classes ${classlist.ios}' />
		</exec>

		<unzip src="../temp/swc/${name}.swc" dest="../temp/swc/content" overwrite="true" />
		<copy file="../temp/swc/content/library.swf" todir="../temp/ios" overwrite="true" />
		<delete dir="../temp/swc/content/" />
	</target>

	<target name="android-swc" description="Build ios swc library">
		<mkdir dir="../temp/swc/content/" />

		<fileset dir="../actionscript" casesensitive="yes" id="classfiles.android">
			<include name="android/src/**/*.as" />
			<include name="common/src/**/*.as" />
		</fileset>

		<pathconvert property="classlist.android" refid="classfiles.android" pathsep=" " dirsep=".">
			<regexpmapper from=".*src.(.*)\.as" to="\1" />
		</pathconvert>

		<exec executable="${sdk.home}/bin/compc" failonerror="true">
			<arg line='-source-path ../actionscript/android/src' />
			<arg line='-source-path+=../actionscript/common/src' />
			<arg line='-output ../temp/swc/${name}.swc' />
			<arg line='-swf-version=13' />
			<arg line='-external-library-path+="${sdk.home}/frameworks/libs/air/airglobal.swc"' />
			<arg line='-include-classes ${classlist.android}' />
		</exec>

		<unzip src="../temp/swc/${name}.swc" dest="../temp/swc/content" overwrite="true" />
		<copy file="../temp/swc/content/library.swf" todir="../temp/android" overwrite="true" />
		<delete dir="../temp/swc/content/" />
	</target>

	<target name="default" description="Build default swc library">
		<mkdir dir="../temp/default/" />

		<fileset dir="../actionscript" casesensitive="yes" id="classfiles.default">
			<include name="default/src/**/*.as" />
			<include name="common/src/**/*.as" />
		</fileset>

		<pathconvert property="classlist.default" refid="classfiles.default" pathsep=" " dirsep=".">
			<regexpmapper from=".*src.(.*)\.as" to="\1" />
		</pathconvert>

		<exec executable="${sdk.home}/bin/compc" failonerror="true">
			<arg line='-source-path ../actionscript/default/src' />
			<arg line='-source-path+=../actionscript/common/src' />
			<arg line='-output ../temp/default/${name}.swc' />
			<arg line='-swf-version=13' />
			<arg line='-external-library-path+="${sdk.home}/frameworks/libs/air/airglobal.swc"' />
			<arg line='-include-classes ${classlist.default}' />
		</exec>

		<unzip src="../temp/default/${name}.swc" dest="../temp/default/swc" overwrite="true" />
		<copy file="../temp/default/swc/library.swf" todir="../temp/default" overwrite="true" />
		<delete dir="../temp/default/swc" />
	</target>

	<target name="package" description="Create the extension package">
		<exec executable="${sdk.home}/bin/adt" failonerror="true" dir="../temp">
			<arg value="-package" />
			<arg value="-storetype" />
			<arg value="pkcs12" />
			<arg value="-keystore" />
			<arg value="${keystore.file}" />
			<arg value="-storepass" />
			<arg value="${keystore.password}" />
			<arg value="-target" />
			<arg value="ane" />
			<arg value="${name}.ane" />
			<arg value="../build/extension.xml" />
			<arg line="-swc swc/${name}.swc" />
			<arg line="-platform iPhone-ARM -platformoptions ../build/platform-iPhone.xml -C ios/ ." />
			<arg line="-platform Android-ARM -platformoptions ../build/platform-Android.xml -C android/ ." />
			<arg line="-platform Android-x86 -platformoptions ../build/platform-Android.xml -C android/ ." />
			<arg line="-platform default -C default/ ." />
		</exec>

		<move file="../temp/${name}.ane" todir="../bin" />
		<move file="../temp/default/${name}.swc" todir="../bin" />
		<delete dir="../temp"/>
	</target>
</project>